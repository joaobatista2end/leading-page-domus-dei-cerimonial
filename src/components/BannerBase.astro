---
interface Props {
  title: string;
  description: string;
  cta: {
    text: string;
    link: string;
  };
  background: string;
}

const { title, description, cta, background } = Astro.props;
---

<div
  class="relative px-16 h-screen aspect-video bg-cover bg-center flex items-center"
  style={`background-image: url(${background})`}
>
  <div class="relative z-10 text-white">
    <h1 class="font-poppins leading-7 max-w-[350px] hyphens-auto text-3xl font-light text-orange-300" set:html={title} />
    <p class="font-kanit font-thin text-sm max-w-[350px] mt-4 hyphens-auto" lang="pt-br">
      {description}
    </p>

    <p class="max-w-[320px] font-kanit mt-4 text-sm font-thin hyphens-auto" lang="pt-br">
      <slot name="cta">
        <a href={cta.link} class="text-orange-300 underline">{cta.text}</a>
      </slot>
    </p>
  </div>

  <div
    class="absolute bottom-0 z-0 left-0 w-full h-full bg-linear-to-r from-black/80 to-black/30"
  >
  </div>
</div>