---
interface Props {
  title: string;
  description: string;
  cta: {
    text: string;
    link: string;
  };
  background: string;
  height: string;
}

const { title, description, cta, background, height } = Astro.props;
---

<div
  class="relative px-16 aspect-video bg-cover bg-fixed bg-center flex items-center w-full"
  style={`background-image: url(${background}); height: ${height}`}
>
  <div class="relative z-10 text-white">
    <h1 
      class="font-poppins leading-7 max-w-[350px] hyphens-auto text-3xl font-light text-orange-300" 
      set:html={title}
      data-aos="fade-right" 
    />
    <p 
      class="font-kanit font-thin text-sm max-w-[350px] mt-4 hyphens-auto" 
      lang="pt-br"
      data-aos="fade-right"
      data-aos-delay="200"
    >
      {description}
    </p>

    <div data-aos="fade-up" data-aos-delay="400">
      <p class="max-w-[320px] font-kanit mt-4 text-sm font-thin hyphens-auto" lang="pt-br">
        <slot name="cta">
          <a href={cta.link} class="text-orange-300 underline">{cta.text}</a>
        </slot>
      </p>
    </div>
  </div>

  <div
    class="absolute bottom-0 z-0 left-0 w-full h-full bg-linear-to-r from-black/80 to-black/30"
  >
  </div>
</div>

