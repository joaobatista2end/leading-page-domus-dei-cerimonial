---
import Layout from "../layouts/Layout.astro";
import MainBanner from "../components/MainBanner.astro";
import SecondBanner from "../components/SecondBanner.astro";
import ThirdBanner from "../components/ThirdBanner.astro";
import PackageCard from "../components/PackageCard.astro";
import packages from "../data/packages.json";

const packageImages = [
  'images/thumb_6.jpg',
  'images/thumb_7.jpg',
  'images/thumb_2.jpg',
  'images/thumb_5.jpg'
];
---

<Layout title="Domus Dei - Cerimonial">
  <MainBanner />
  <section class="bg-orange-100">
    <div class="max-w-screen-lg mx-auto h-screen flex-col flex justify-center">
      <div class="flex flex-col items-center gap-2 mb-8">
        <h2 class="font-poppins font-[100] text-4xl text-black/80">Casamento</h2>
        <img
          src="images/decoration_1.png"
          alt="decoration_2"
          class="w-[200px] -mt-4"
        />
        
        <p class="font-kanit font-thin text-sm max-w-[350px] text-center hyphens-auto" lang="pt-br">
          Conheça nossos pacotes de casamento. Cada um é personalizado para atender às suas necessidades e expectativas.
        </p>
      </div>

      <div class="max-w-[840px]  mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">
        {packages.map((pkg, index) => (
          <PackageCard
            name={pkg.name}
            description={pkg.description}
            services={pkg.services}
            image={packageImages[index]}
          />
        ))}
      </div>
    </div>
  </section>
  <SecondBanner />
  <ThirdBanner />
</Layout>
